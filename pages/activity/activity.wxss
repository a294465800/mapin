/* pages/activity/activity.wxss */

.container {
  background-color: #eee;
  padding-bottom: 60rpx;
}

/* 制作按钮 */

.activity-btns {
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.activity-btns>view {
  flex: 1;
  border-radius: 5px;
  border: 1px solid #f9be0a;
  text-align: center;
  padding: 20rpx 0;
  font-size: 12pt;
}

view.activity-btn-example {
  margin-right: 20rpx;
  color: #f18202;
  border-color: #f18202;
}

.activity-btn-make {
  margin-left: 20rpx;
  background-color: #f9be0a;
  color: #fff;
}

.activity-sort {
  background-color: #fff;
}

.activity-sort>view {
  flex: 1;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
  position: relative;
  font-size: 14px;
}

.activity-sort>view.active {
  color: #f9be0a;
}

.activity-sort>view::after {
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  border-width: 10rpx;
  border-style: solid;
  border-color: #000 transparent transparent transparent;
  right: 25%;
  top: 50%;
  transform: translateY(-40%);
}

.activity-sort>view.active::after {
  border-color: #f9be0a transparent transparent transparent;
}

/* 活动列表 */

.activity-list-item {
  background-color: #fff;
  padding: 20rpx 30rpx;
  width: 100%;
  margin-bottom: 30rpx;
  border-top: 1px solid #eee;
  position: relative;
}

.activity-list-item:last-of-type {
  margin-bottom: 0;
}

.activity-list-item-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.activity-list-item-content {
  flex: 1;
}

.activity-list-item-title {
  font-size: 16px;
  color: #333;
  max-width: 460rpx;
}

.activity-list-item-info {
  font-size: 12px;
  color: #999;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.activity-list-item-tuan>image {
  margin-right: 15rpx;
}

.activity-list-item-buy {
  justify-content: space-between;
  margin-top: 20rpx;
}

.activity-list-item-price {
  font-size: 17px;
  align-items: center;
}

.activity-list-item-origin-price {
  margin-right: 10rpx;
  color: #f2533f;
  font-size: 34rpx;
}

.activity-list-item-old-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.activity-list-item-btn {
  font-size: 30rpx;
  color: #fff;
  background-color: #f9be0a;
  padding: 14rpx 30rpx;
  border-radius: 3px;
  box-shadow: 0 1px #ccc, 2px 2px 10px #ccc;
}

.activity-list-item-btn-hover {
  background-color: #e8b20d;
}

.activity-list-item-timeRange {
  font-size: 13px;
  color: #f9be0a;
  margin-top: 20rpx;
}

.activity-list-item-distance {
  font-size: 14px;
  color: #f9be0a;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
