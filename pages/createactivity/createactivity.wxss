/* pages/createactivity/createactivity.wxss */

.container {
  background-color: #eee;
  padding-bottom: 60rpx;
}

/* 表单 */

.form-title {
  font-size: 14px;
  padding: 20rpx 30rpx;
  color: #999;
}

.form-group {
  padding: 0 30rpx;
  background-color: #fff;
}

.form-tips {
  font-size: 12px;
  color: #aaa;
  padding: 20rpx 30rpx;
}

.form-imgs {
  flex-wrap: wrap;
  padding: 30rpx 0;
  /* justify-content: space-around; */
}

.plus-icon {
  width: 200rpx;
  height: 200rpx;
}

.form-pre-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: unset;
}

.close-btn {
  position: absolute;
  top: -10px;
  right: -10px;
  background-color: #fff;
  border-radius: 50%;
}

.form-rule {
  padding: 30rpx 0;
  font-size: 16px;
}

.submit-btn {
  width: 94%;
  background-color: #f9be0a;
  color: #fff;
  font-size: 16pt;
  margin-top: 40rpx;
}

.submit-hover {
  background-color: #e8b20d;
}
