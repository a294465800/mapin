<!--pages/myinfo/myinfo.wxml-->
<view class='container'>
  <form>
    <view class='form-item'>
      <view class='form-title'>基本设置</view>
      <view class='form-group'>
        <label class='label-beautify'>
          <view>姓名</view>
          <input name="user_Name" placeholder='请输入用户姓名'></input>
        </label>
        <label class='label-beautify'>
          <view>性别</view>
          <picker bindchange="chooseSex" value="{{sexIndex}}" range="{{sexText}}">
            <view class="picker">{{sexText[sexIndex]}}</view>
          </picker>
        </label>
        <label class='label-beautify'>
          <view>电话</view>
          <input name="user_Tel" type='number' placeholder='请输入用户电话'></input>
        </label>
        <label class='label-beautify'>
          <view>地址</view>
          <view class='simulate-input' catchtap='getLocation'>{{userForm.user_Address || '请选择地址'}}</view>
        </label>
        <block wx:if="{{true}}">
          <label class='label-beautify'>
            <view>商家名称</view>
            <input name="user_Company" placeholder='请输入商家名称'></input>
          </label>
          <label class='label-beautify'>
            <view>职务</view>
            <input name="user_Post" placeholder='请输入职务'></input>
          </label>
        </block>
        <block wx:else>

        </block>
      </view>
    </view>
    <button form-type='submit' type='primary'>保存</button>
  </form>
</view>