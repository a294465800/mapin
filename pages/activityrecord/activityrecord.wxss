/* pages/activityrecord/activityrecord.wxss */

.container {
  background-color: #eee;
  padding-bottom: 60rpx;
}

/* 列表 */

.activity-list-item {
  background-color: #fff;
  padding: 20rpx 30rpx;
  width: 100%;
  margin-bottom: 30rpx;
  border-top: 1px solid #eee;
  position: relative;
}

.activity-list-item-title-wrap {
  justify-content: space-between;
  border-bottom: 1px dashed #999;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}

.activity-list-item-id {
  color: #666;
  font-size: 13px;
}

.activity-list-item-status {
  font-size: 13px;
}

.activity-list-item:last-of-type {
  margin-bottom: 0;
}

.activity-list-item-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.activity-list-item-content {
  flex: 1;
}

.activity-list-item-title {
  font-size: 16px;
  color: #333;
  max-width: 460rpx;
}

.activity-list-item-info {
  font-size: 12px;
  color: #999;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.activity-list-item-tuan>image {
  margin-right: 15rpx;
}

.activity-list-item-buy {
  justify-content: space-between;
  margin-top: 20rpx;
}

.activity-list-item-price {
  /* font-size: 17px; */
  align-items: center;
}

.activity-list-item-origin-price {
  margin-right: 10rpx;
  color: #f2533f;
  font-size: 36rpx;
}

.activity-list-item-old-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}

.activity-list-item-btn {
  font-size: 28rpx;
  color: #fff;
  background-color: #f9be0a;
  padding: 14rpx 20rpx;
  border-radius: 3px;
  box-shadow: 0 1px #ccc, 2px 2px 10px #ccc;
  align-items: center;
}

.activity-list-item-btn>view:first-child {
  margin-right: 10rpx;
}

.activity-list-item-btn-hover {
  background-color: #e8b20d;
}

.activity-list-item-timeRange {
  font-size: 13px;
  color: #f9be0a;
  margin-top: 20rpx;
}

/* 还没创建活动 */

.activity-none-wrap {
  height: 100%;
  align-items: center;
  padding-bottom: 30rpx;
}

.activity-none-content {
  flex: 1;
}

.activity-none-img {
  width: 532rpx;
  height: 477rpx;
}

.activity-none-content>.tips {
  margin-top: 50rpx;
}

.activity-none-btn {
  width: 94%;
  background-color: #f9be0a;
  color: #fff;
  font-size: 16pt;
}

.activity-none-btn-hover {
  background-color: #e8b20d;
}

/* 新增功能 */

.activity-list-item-plus {
  height: 0;
  opacity: 0;
  overflow: hidden;
  transition: height 0.5s, opacity 0.3s;
}

.activity-list-item-plus.active {
  opacity: 1;
  height: 320rpx;
  justify-content: space-around;
  transition: height 0.5s, opacity 0.5s;
}

.activity-list-item-plus-post {
  font-size: 14px;
  justify-content: space-between;
  align-items: center;
  border-top: 1px dashed #ddd;
  border-bottom: 1px dashed #ddd;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-top: 20rpx;
}

.activity-list-item-plus-post-check {
  color: #3ba6de;
}

.activity-list-item-plus-post .activity-list-item-btn {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.activity-list-item-plus-data {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px dashed #ddd;
}

.activity-list-item-plus-data-item {
  flex: 1;
  font-size: 14px;
  text-align: center;
}

.activity-list-item-plus-data-num {
  color: #f9be0a;
}

.activity-list-item-plus-btns {
  justify-content: flex-end;
  font-size: 14px;
  padding-top: 20rpx;
}

.activity-list-item-plus-btn {
  border: 1px solid #333;
  text-align: center;
  flex: 1;
  border-radius: 4px;
  margin-left: 30rpx;
  padding: 10rpx 0;
}

.activity-list-item-plus-btn-hover {
  background-color: #333;
  color: #fff;
}

/* 额外 */

.activity-status {
  position: absolute;
  right: 15rpx;
  top: 30rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #67c23a;
  padding: 8rpx 10rpx;
  transform: rotate(40deg);
  z-index: 1;
}

.activity-status.no {
  background-color: #f2533f;
  color: #fff;
}
