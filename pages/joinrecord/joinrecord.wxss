/* pages/joinrecord/joinrecord.wxss */

.container {
  background-color: #eee;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

/* 手机号查询 */

.label-beautify {
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
}

.search-btn {
  background-color: #f9be0a;
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 20rpx;
  border-radius: 4px;
  line-height: 1;
}

.search-btn-hover {
  background-color: #e8b20d;
}

/* 列表 */

.join-list {
  flex: 1;
  position: relative;
}

.scroll {
  height: 100%;
  padding: 30rpx;
  padding-top: 0;
  box-sizing: border-box;
}

.join-item {
  margin-top: 30rpx;
}

.join-item-title {
  background-color: #ffefc2;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  color: #333;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  padding: 20rpx 30rpx;
}

.join-item-title-status {
  color: #f9be0a;
  font-size: 14px;
}

.join-item-content {
  background-color: #fff;
  padding: 30rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.join-item-content-info-text {
  font-size: 14px;
  color: #999;
  margin: 10rpx 0;
}

.join-item-content-btn {
  align-items: center;
  font-size: 32rpx;
  color: #f9be0a;
}

.join-item-content-btn-hover {
  text-decoration: underline;
}

.join-item-content-btn>view:first-child {
  margin-right: 10rpx;
}

/* 按钮 */

.qr-btn {
  width: 94%;
  background-color: #f9be0a;
  color: #fff;
  font-size: 16pt;
}

.qr-hover {
  background-color: #e8b20d;
}

/* 名单导出 */

.export-wrap {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.export-item {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 80%;
  height: 350rpx;
  background-color: #fff;
  border-radius: 5px;
}

.export-item-content {
  padding: 30rpx;
  flex: 1;
  justify-content: space-around;
}

.export-item-title {
  text-align: center;
  font-size: 15pt;
}

.export-input {
  border-bottom: 1px solid #ddd;
  padding: 10rpx 20rpx;
  font-size: 15px;
}

.export-item-btns {
  border-top: 1px solid #ddd;
}

.export-item-btns>view {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
}

.export-item-btns>view:first-child {
  border-right: 1px solid #ddd;
}

.success {
  color: #f9be0a;
  border-bottom-left-radius: 5px;
}

.success-hover {
  background-color: #f9be0a;
  color: #fff;
}
