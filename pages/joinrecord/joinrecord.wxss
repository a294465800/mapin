/* pages/joinrecord/joinrecord.wxss */

.container {
  background-color: #eee;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

/* 手机号查询 */

.label-beautify {
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
}

.search-btn {
  background-color: #f9be0a;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 4px;
}

.search-btn-hover {
  background-color: #e8b20d;
}

/* 列表 */

.join-list {
  flex: 1;
  position: relative;
}

.scroll {
  height: 100%;
  padding: 30rpx;
  padding-top: 0;
  box-sizing: border-box;
}

.join-item {
  margin-top: 30rpx;
}

.join-item-title {
  background-color: #ffefc2;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  color: #333;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  padding: 20rpx 30rpx;
}

.join-item-title-status {
  color: #f9be0a;
  font-size: 14px;
}

.join-item-content {
  background-color: #fff;
  padding: 30rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.join-item-content-info-text {
  font-size: 14px;
  color: #999;
  margin: 10rpx 0;
}

.join-item-content-btn {
  align-items: center;
  font-size: 16px;
  color: #f9be0a;
}

.join-item-content-btn-hover {
  text-decoration: underline;
}

.join-item-content-btn>view:first-child {
  margin-right: 10rpx;
}

/* 按钮 */

.qr-btn {
  width: 94%;
  background-color: #f9be0a;
  color: #fff;
  font-size: 16pt;
}

.qr-hover {
  background-color: #e8b20d;
}
