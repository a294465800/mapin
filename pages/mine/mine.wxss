/* pages/mine/mine.wxss */

.container {
  background-color: #eee;
  padding-bottom: 60rpx;
}

/* 登录 */

.login-wrap {
  background-color: #fff;
  padding: 40rpx 30rpx;
  align-items: center;
  border-top: 1px solid #ccc;
  height: 110px;
}

.login-avatar-img {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-right: 30rpx;
}

.login-avatar-name {
  font-size: 18px;
}

.login-btn {
  font-size: 18px;
  color: #999;
  text-align: center;
  width: 100%;
}

/* 会员时间 */

.memeber-time-wrap {
  font-size: 16px;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-top: 1px solid #eee;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.member-in {
  text-align: center;
  color: #f18202;
}

.memeber-time {
  color: #f18202;
  font-size: 14px;
}

.member-btn {
  background-color: #f18202;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 4px;
  font-size: 14px;
}

/* 操作列表 */

.operation-part {
  background-color: #fff;
  padding: 30rpx;
  font-size: 16px;
  color: #333;
  justify-content: space-between;
  align-items: center;
  margin-top: 1px;
}

.operation-part:nth-child(6n+1) {
  margin-top: 30rpx;
}

button.operation-part {
  line-height: 1;
  border-radius: 0;
}

button.operation-part::after {
  content: '';
  border: 0;
}

.operation-content {
  align-items: center;
}

.operation-icon {
  width: 17px;
  height: 18px;
  margin-right: 20rpx;
}
