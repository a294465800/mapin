/* pages/costrecord/costrecord.wxss */

.container {
  background-color: #eee;
  padding-bottom: 60rpx;
}

/* 导航 */

.nav-bar {
  background-color: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.nav-item {
  flex: 1;
  font-size: 16px;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}

.nav-item.active {
  border-bottom: 3px solid #f9be1c;
  color: #f9be1c;
}

/* 列表样式 */

.record-item {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.record-item:last-child {
  margin-bottom: 0;
}

.record-item-head {
  padding-bottom: 10rpx;
  border-bottom: 1px dashed #ccc;
  margin-bottom: 20rpx;
  justify-content: space-between;
}

.record-item-head>.flex-row {
  align-items: center;
}

.record-item-head image {
  margin-right: 20rpx;
}

.record-item-head-shop, .record-item-head-info {
  font-size: 14px;
}

.record-item-head-info {
  color: #f9be1c;
}

.record-item-content-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.record-item-content>.flex-column {
  justify-content: space-between;
  flex: 1;
}

.record-item-content-title {
  font-size: 16px;
  max-width: 460rpx;
}

.record-item-content-info {
  justify-content: space-between;
}

.record-item-content-type {
  align-items: center;
}

.record-item-content-type-text {
  font-size: 14px;
  color: #999;
  margin-left: 10rpx;
}

.record-item-content-price {
  color: #f2533f;
  font-size: 20px;
}

.record-item-foot {
  justify-content: space-between;
  margin-top: 20rpx;
  align-items: flex-end;
}

.record-item-foot-time {
  font-size: 13px;
  color: #f9be0a;
}

.record-item-foot-btn {
  font-size: 32rpx;
  color: #444;
  border: 1px solid #444;
  border-radius: 5px;
  padding: 10rpx 20rpx;
}

.record-item-foot-btn-hover {
  background-color: #444;
  color: #fff;
}

.record-item-foot-btn.success {
  color: #f9be0a;
  border-color: #f9be0a;
}

.record-item-foot-btn-hover-success {
  background-color: #f9be0a;
  color: #fff !important;
}

/* 额外 */
.record-item-img {
  width: 20px;
  height: 20px;
  margin-right: 0!important;
}