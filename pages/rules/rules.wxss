/* pages/rules/rules.wxss */

.container {
  height: 100%;
  padding-bottom: 30rpx;
  background-color: #fff;
  justify-content: space-between;
}

/* 文本 */

.rules-wrap {
  flex: 1;
  position: relative;
}

.scroll {
  height: 100%;
}

.rules-title {
  text-align: center;
  font-size: 18px;
  font-weight: 600;
}

.rules-content {
  padding: 30rpx;
}

.rules-subtitle {
  font-size: 16px;
  text-indent: 2em;
  margin-bottom: 20px;
}

.rules-item-title {
  font-weight: 600;
  font-size: 16px;
}

.rules-item-content {
  text-indent: 2em;
  font-size: 16px;
  margin-bottom: 20px;
}

.rules-foot {
  text-align: right;
  color: #e8b20d;
  font-size: 14px;
}

/* 按钮 */

.rules-btn {
  width: 94%;
  background-color: #f9be0a;
  color: #fff;
  font-size: 16pt;
  margin-top: 30rpx;
}

.rules-hover {
  background-color: #e8b20d;
}
